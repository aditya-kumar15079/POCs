{
  "name": "electron-batch-runner",
  "version": "1.0.0",
  "description": "Electron app to run a local batch file.",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm:serve\" \"electron .\"",
    "serve": "vite",
    "build": "vite build",
    "copy-icon": "cp static/icon.png dist/assets/icon.png",
    "electron-build-win": "electron-builder --win",
    "electron-build-linux": "electron-builder --linux",
    "build:win": "npm run build && npm run electron-build-win",
    "build:linux": "npm run build && npm run electron-build-linux"
  },
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "@vitejs/plugin-react": "^4.5.0",
    "js-yaml": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^27.1.0",
    "electron-builder": "^24.0.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "vite": "^5.2.0"
  },
  "build": {
    "appId": "com.example.testrunner",
    "productName": "TestFoundry",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "run.png",
      "category": "Development"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.icns"
    }
  }
}
